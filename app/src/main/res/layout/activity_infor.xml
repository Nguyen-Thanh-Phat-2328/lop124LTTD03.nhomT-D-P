<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f0f0f0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:contentDescription="Back"
            android:src="@drawable/ic_back"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin thành viên"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:padding="8dp" />

    </RelativeLayout>

    <!-- Thành viên 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên: "
            android:textSize="18sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/TenTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Thành Phát"
            android:textSize="18sp"
            android:textColor="#757575" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã: "
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/MaTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22115053122328"
            android:textSize="16sp"
            android:textColor="#757575" />
    </LinearLayout>

    <!-- Thành viên 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên: "
            android:textSize="18sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/TenTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Võ Tấn Dũng"
            android:textSize="18sp"
            android:textColor="#757575" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã: "
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/MaTV2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22115053122311"
            android:textSize="16sp"
            android:textColor="#757575" />
    </LinearLayout>

    <!-- Thành viên 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:layout_marginTop="10dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên: "
            android:textSize="18sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/TenTV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Đình Tuấn"
            android:textSize="18sp"
            android:textColor="#757575" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã: "
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/MaTV3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22115053122351"
            android:textSize="16sp"
            android:textColor="#757575" />
    </LinearLayout>

</LinearLayout>
